<div class="row">
    <div class="col-md-6 m-auto">
        <h2 class="text-center">{{viewTitle}}</h2>
        <form action="/users/signup" method="post">
            {{#if loginErr}}
            <p class="error text-danger">{{loginErr}}</p>
            {{/if}}
            <div class="form-group">
                <label for="">Name </label>
                <input type="name" class="form-control" name="username" placeholder="Enter Name" required>
            </div>

            <div class="form-group">
                <label for="">Email Address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
            </div>

            <div class="form-group">
                <label for="">Password</label>
                <input type="password" class="form-control" name="password" id="password1" placeholder="Enter Password" minlength="3"
                    required>
            </div>

            <div class="form-group">
                <label for="">Confirm Password</label>
                <input type="password" class="form-control" name="confirm_password" id="confirm_password"
                    placeholder="Confirm Password" required>

                <input type="checkbox" class='mt-4' onclick="myFunction()"> Show Password
            </div>
            <a href="/users/login">Already have Account ?</a>
            <button type="submit" class="btn btn-primary float-right">Signup</button>
        </form>
    </div>
</div>

<script>

    var password = document.getElementById("password1")
        , confirm_password = document.getElementById("confirm_password");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;

    function myFunction() {
        var x = document.getElementById("password1");
        var x1 = document.getElementById("confirm_password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }

        if (x1.type === "password") {
            x1.type = "text";
        } else {
            x1.type = "password";
        }
    }
</script>